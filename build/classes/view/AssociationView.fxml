<VBox fx:controller ="controller.AssociationController" styleClass="background" prefHeight="420.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">

        <children>
              <ImageView fx:id ="nbaImage" fitHeight="230.0" fitWidth="600.0" >
               <image>
                   <Image url ="@/view/NBA_Back.jpg" />
                </image>
            </ImageView>

            <GridPane alignment="BOTTOM_CENTER" hgap = "15" vgap = "15">
                <Button  fx:id = "exploreTeams"  text ="Explore Teams"  GridPane.columnIndex="0" onAction="#exploreTeams" />
                <Button  fx:id = "exit"  text ="Exit" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#exit"/>
                <Button  fx:id = "arrangeSeason"  text ="Arrange a new season" GridPane.columnIndex="2" onAction="#newSeason"/>
            </GridPane>

        </children>

    <padding>
        <Insets top="0" right="0" bottom="10" left="0" />
    </padding>
        <stylesheets>
            <URL value="@style.css"/>
        </stylesheets>



    </VBox>










