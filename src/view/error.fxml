<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox fx:id="errorsVBox" fx:controller="controller.ErrorController" xmlns:fx="http://javafx.com/fxml/1" alignment="center" styleClass="background" spacing="10" prefHeight="300.0" prefWidth="350.0">
    <children>
        <Label fx:id ="message" text="Message:" style="-fx-font-size: 19 ;"  />
        <Label fx:id = "errorMessage" styleClass="label-error"  />

    </children>

    <Button fx:id = "okayButton" text = "Okay" onAction="#exit"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

</VBox>
