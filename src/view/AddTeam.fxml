<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox fx:controller = "controller.AddTeamController"  alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" >

    <children>
        <GridPane alignment="CENTER" hgap = "15" vgap = "15">
        <Label fx:id ="teamDetails" text="Team Details" style="-fx-font-size: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id = "name" text = "Name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id = "teamName" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id = "addButton" text = "Add" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#addTeam" />
        </GridPane>

    </children>

    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
   
   
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

    

